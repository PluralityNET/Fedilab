<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_image">

    <ImageView
        android:id="@+id/back_ground_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:alpha="0.2"
        android:contentDescription="@string/profile_banner"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fab_margin">
        <!-- Profile picture -->
        <ImageView
            android:id="@+id/dialog_profile_picture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:contentDescription="@string/profile_picture"
            android:scaleType="centerCrop" />
        <!-- Screen name -->
        <TextView
            android:id="@+id/dialog_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_profile_picture"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal|top"
            android:maxLines="1"
            android:textSize="18sp"
            android:textStyle="bold" />
        <!-- Description -->
        <TextView
            android:id="@+id/dialog_profile_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_profile_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:lines="4"
            android:maxLines="5"
            android:minLines="4" />
    </RelativeLayout>


</RelativeLayout>


